				<div class="space-x-4">
					//<a href="/logout" class="px-4 py-2 bg-green-700 hover:bg-green-600 rounded">
					//Sign out
					//</a>
					<form action="/logout" method="post" class="inline pr-4">
						//<div class="hidden">{{csrfField}}</div>
						<button type="submit">Sign out</button>
					</form>
				</div>
			}
